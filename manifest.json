{
  "manifest_version": 2,
  "name": "HexCorp Launcher",
  "description": "HexCorp Subliminals insertion",
  "version": "1.0.2",
  "icons": {
    "128": "icon_128.png"
  },
  "permissions": ["activeTab"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "all_frames": true,
      "js": [
        "/js/contentScript.js",
        "/js/wordReplace.js",
        "/js/colourChanger.js"
      ],
      "run_at": "document_end"
    }
  ],
  "background": {
    "scripts": ["/js/controller.js"],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "html/popup.html",
    "default_title": "popup"
  }
}
